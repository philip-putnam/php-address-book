{{ include('base.html.twig') }}

<html>
<head>
    <title>Edit Contact Page</title>
</head>
<body>
    <div class='container'>
      <header class="well">
        <h1>Address Book</h1>
      </header>
      <div class='row'>
        <div class='col-md-12'>
          <form action='/new-contact-info' method='post'>
            <h3>Choose a contact to edit, type new infromation, and hit submit</h3>
            Edit Contact: <select name='edit-contact'>
            {% for contact in contacts %}
                <option>{{ contact.getname }}</option>
            {% endfor %}
            </select>
            <label for=edit-phone>New Phone Number: </label>
            <input type='number' name='edit-phone'>
            <label for=edit-address>New Address: </label>
            <input type='text' name='edit-address'>

            <button type='submit' class='btn btn-warning'>Submit Changes</button>
          </form>
        </div>
      </div>
      <div class='form-group'>
        <br>
        <a href="/"><button class='btn btn-success'>Home</button></a>
      </div>
    </div>
</body>
</html>
